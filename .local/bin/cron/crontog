#!/bin/sh

# Toggles all cronjobs off/on.
# Stores disabled crontabs in ~/.config/cronsaved until restored.

([ -f "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved ] && crontab - < "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved  && rm "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && dunstify "ðŸ•“ Cronjobs re-enabled.") || ( crontab -l > "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && crontab -r && dunstify "ðŸ•“ Cronjobs saved and disabled.")
